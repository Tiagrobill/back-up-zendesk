{
    "builds": [
      {
        "src": "ticket-search-front/package.json",
        "use": "@vercel/static-build",
        "config": {
          "distDir": "build"
        }
      },
      {
        "src": "ticket-search-api/package.json",
        "use": "@vercel/node"
      }
    ],
    "routes": [
      { "src": "/api/(.*)", "dest": "ticket-search-api/$1" },
      { "src": "/(.*)", "dest": "ticket-search-front/$1" }
    ]
  }
  