{
  "version": 2,
  "builds": [
    {
      "src": "ticket-search-frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "ticket-search-frontend/build",
        "buildCommand": "npm install && npm run build"  
      }
    },
    {
      "src": "ticket-search-api/app.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/ticket-search-api/app.js"
    },
    {
      "src": "/(.*)",
      "dest": "/ticket-search-frontend/build/$1"
    }
  ]
}
